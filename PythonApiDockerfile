FROM python:3.9-slim

ENV PORT 8080

WORKDIR /usr/src/app

COPY python-api-requirements.txt ./requirements.txt

RUN pip install -r requirements.txt

COPY python_api ./src

EXPOSE $PORT

CMD [ "gunicorn", "src:app", "--workers=2", "--worker-class=uvicorn.workers.UvicornWorker", "--bind=0.0.0.0:8080"]